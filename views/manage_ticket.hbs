
<section class="forms">
  <div class="container-fluid">
    <header> 
            <h1 class="h3 display">Respond to Ticket</h1>
          </header>
  </div>
  <div class="row">
     <div class="col-lg-7">
              <div class="card">
                <div class="card-header d-flex align-items-center">
                  <h2 class="h5 display display">Form</h2>
                </div>
                <div class="card-body">
                  {{#if err}}
                  <div class="alert alert-danger"><p>{{err}}</p></div>
                  {{/if}}
                  {{#if message}}
                  <div class="alert alert-success"><p>{{message}}</p></div>
                  {{/if}}
                      <form action="/admin/respondTicket/{{TicketId}}" method="post">
                      <div class="form-group">
                      <label>Username</label>
                      <input disabled type="text" value="{{username}}" class="form-control">
                    </div>
                    <div class="form-group">
                      <label>Subject</label>
                      <input disabled type="text" value="{{subject}}" class="form-control">
                    </div>
                    <div class="form-group">       
                      <label>Complain</label>
                      <textarea disabled id="" cols="30" rows="10" class="form-control">{{complain}}</textarea>
                    </div>
                    <div class="form-group">       
                      <label>Response</label>
                      <textarea id="" name="response" cols="30" rows="10" placeholder="Write your response" class="form-control"></textarea>
                    </div>
                    <div class="form-group">       
                      <input type="submit" value="Submit" class="btn btn-primary">
                    </div>
                  </form>
                </div>
              </div>
            </div>
  </div>
</section>