
<section class="forms">
  <div class="container-fluid">
    <header> 
            <h1 class="h3 display">Submit a Ticket</h1>
          </header>
  </div>
  <div class="row">
     <div class="col-lg-7">
              <div class="card">
                <div class="card-header d-flex align-items-center">
                  <h2 class="h5 display display">Form</h2>
                  <p>{{username}}</p>
                </div>
                <div class="card-body">
                  {{#if err}}
                  <div class="alert alert-danger"><p>{{err}}</p></div>
                  {{else}} {{#if message}}
                  <div class="alert alert-success"><p>{{message}}</p></div>
                  {{/if}}{{/if}}
                  <form action="/users/submit_ticket" method="post">
                    <div class="form-group">
                      <label>Subject</label>
                      <input required type="text" name="subject" placeholder="Subject" class="form-control">
                    </div>
                    <div class="form-group">       
                      <label>Complain</label>
                      <textarea required name="complain" id="" cols="30" rows="10" placeholder="Write your complain"
                      class="form-control"></textarea>
                    </div>
                    <div class="form-group">       
                      <input type="submit" value="Submit" class="btn btn-primary">
                    </div>
                  </form>
                </div>
              </div>
            </div>
  </div>
</section>